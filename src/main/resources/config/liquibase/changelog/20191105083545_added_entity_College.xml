<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>
	<property name="currentdate" value="current_date" dbms="postgresql"/>
    
	<!--
        Added the entity College.
    -->
    <changeSet id="20191105083545-1" author="jhipster">
        <createTable tableName="college">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="college_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="logo_file_path" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="logo_file_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="logo_file_extension" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_on" type="date">
                <constraints nullable="true" />
            </column>

            <column name="updated_by" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="updated_on" type="date" defaultValueDate="${currentdate}">
                <constraints nullable="true" />
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="country_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>

</databaseChangeLog>
